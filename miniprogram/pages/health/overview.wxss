/* overview.wxss */
.overview {
  background-color: #F7F9FC;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.overview-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.overview-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.overview-item-title {
  font-size: 28rpx;
  color: #333333;
}

.overview-item-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #4A90E2;
}
