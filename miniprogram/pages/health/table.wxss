/* table.wxss */
.table {
  padding: 20rpx;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.table-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.table-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.table-subtitle {
  font-size: 28rpx;
  color: #999999;
}

.table-content {
  display: flex;
  flex-direction: column;
}

.table-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #EEEEEE;
  padding: 20rpx 0;
}

.table-cell {
  font-size: 28rpx;
  color: #333333;
  width: 25%;
  text-align: center;
}
