:root{
  square: 50%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #f5f5f5;
}

.dropdown-menu {
  margin-top: 20px;
  margin-left: 20px;
  font-size: 16px;
  color: #333333;
}

.menu-text {
  padding: 8px 20px;
  background-color: #ffffff;
}
.notice {
  margin-top: 20px;
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #ffffff;
  overflow: hidden;
}

.notice-text {
  margin-left: 20px;
  font-size: 16px;
  color: #666666;
}

.category {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 20px;
  width: 90%;
  height: 200px;
  background-color: #ffffff;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: var(square);
  height: var(square);
}

.category-icon {
  height: 40px;
  width: 40px;
}

.category-text {
  margin-top: 10px;
  font-size: 14px;
  color: #666666;
}

.service {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 20px;
  margin-left: 20px;
  margin-right: 20px;
  width: 90%;
  background-color: #ffffff;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 15%;
  margin-top: 20px;
  margin-left: 10px;
  margin-right: 10px;
}

.service-icon {
  width: 60px;
  height: 60px;
}

.service-text {
  margin-top: 10px;
  font-size: 10px;
  color: #666666;
}

